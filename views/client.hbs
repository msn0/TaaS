<!doctype html>
<html>
<head>
    <title>TaaS</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/zepto/1.1.6/zepto.js"></script>
    <style>
        body {
            background: #614126;
        }

        .logo {
            padding: 10px;
        }

        .cabin {
            height: 100px;
            margin: 0 5px;
            background: #00ff00;
        }

        .cabin.busy {
            background: #ff0000;
        }

        .gender {
            color: #fff;
            font-weight: bold;
            font-size: 25px;
            text-align: center;
        }
    </style>
</head>
<body>
<div class="logo">
    <img src="images/toilet-logo.png" alt="">
</div>
<div class="row gender">
    <p>MALE</p>
</div>
<div class="row">
    <div class="col-xs-3">
        <div class="cabin" id="m-1"></div>
    </div>
    <div class="col-xs-3">
        <div class="cabin" id="m-2"></div>
    </div>
    <div class="col-xs-3">
        <div class="cabin" id="m-3"></div>
    </div>
    <div class="col-xs-3">
        <div class="cabin" id="m-4"></div>
    </div>
</div>
<br>
<div class="row gender">
    <p>FEMALE</p>
</div>
<div class="row">
    <div class="col-xs-3">
        <div class="cabin" id="f-1"></div>
    </div>
    <div class="col-xs-3">
        <div class="cabin" id="f-2"></div>
    </div>
    <div class="col-xs-3">
        <div class="cabin" id="f-3"></div>
    </div>
    <div class="col-xs-3">
        <div class="cabin" id="f-4"></div>
    </div>
</div>
<script>

    var socket = new WebSocket("ws://localhost:9000");

    function free(id, gender) {
        $("#" + gender + "-" + id).removeClass("busy");
    }

    function busy(id, gender) {
        $("#" + gender + "-" + id).addClass("busy");
    }


    socket.onmessage = function (event) {
        var data = JSON.parse(event.data);

        switch (data.action) {
            case "busy":
                busy(data.id, data.gender);
                break;
            case "free":
                free(data.id, data.gender);
                break;
            default:
                free(data.id, data.gender);
                break;
        }

    }

</script>
</body>
</html>
